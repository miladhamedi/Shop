@model ShopActionResult<List<ColorViewModel>>

@{
    ViewData["Title"] = "مدیریت رنگ";

}


<section class="content-header">
    <h1>
        مدیریت
        <small>رنگ ها</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت رنگ ها</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a asp-area="Admin" asp-controller="Color" asp-action="Create" class="btn btn-info"><i class="fa fa-plus-square"></i> رنگ جدید</a>
                </div>

                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">

                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="text-align:center;">
                                                @Html.DisplayNameFor(model => model.Data.First().ColorPro)
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="text-align:center;">
                                                @Html.DisplayNameFor(model => model.Data.First().ColorCode)
                                            </th>
                                            <th></th>
                                            <th style="text-align:center;">ویرایش</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {
                                            <tr role="row" class="odd">
                                                <td style="text-align:center;">
                                                    @Html.DisplayFor(modelItem => item.ColorPro)
                                                </td>
                                                <td style="text-align:center;">
                                                    @Html.DisplayFor(modelItem => item.ColorCode)
                                                </td>
                                                <td style="text-align:center;background-color:#@item.ColorCode"></td>
                                                <td style="text-align:center;">
                                                    <a asp-controller="Color" asp-area="Admin" asp-action="Edit"  asp-route-id="@item.ColorId"><i class="fa fa-edit" style="color:forestgreen; font-size:20px;"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                <ul class="pagination">
                                    @for (int i = 1; i <= Model.Pages; i++)
                                    {

                                        if (Model.Page == i)
                                        {



                                            <li class="active">
                                                <a href="/Admin/Color/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>




                                        }
                                        else
                                        {


                                            <li>
                                                <a href="/Admin/Color/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>



                                        }


                                    }



                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>


</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

