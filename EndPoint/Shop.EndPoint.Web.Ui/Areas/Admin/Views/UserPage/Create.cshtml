@model UserPageViewModel

@{
    ViewData["Title"] = " اضافه کردن کردن دسترسی";

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        اضافه کردن
        <small>دسترسی </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">اضافه کردن دسترسی </li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-controller="UserPage" asp-action="Create" method="post">
                        <div class="box-body">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">

                                <div class="select">
                                    <select asp-for="RoleId" class="form-control" style="height:50%" asp-items="ViewBag.ListRole"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PageNameEn" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="PageNameEn" class="form-control" />
                                    <span asp-validation-for="PageNameEn" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="PageNameFa" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="PageNameFa" class="form-control" />
                                    <span asp-validation-for="PageNameFa" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ControllerName" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="ControllerName" class="form-control" />
                                    <span asp-validation-for="ControllerName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-5 ">
                                    <input type="submit" value="اضافه کردن" class="btn btn-success" />
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </div>

    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
