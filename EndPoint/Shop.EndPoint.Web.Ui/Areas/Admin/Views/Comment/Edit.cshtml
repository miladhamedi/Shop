@model CommentViewModel

@{
    ViewData["Title"] = "پاسخ دهی";

}

<script src="//cdn.ckeditor.com/4.8.0/basic/ckeditor.js"></script>
<link href="~/css/farbtastic.css" rel="stylesheet" />
<script src="~/js/farbtastic.js"></script>


<section class="content-header">
    <h1>
        پاسخ
        <small>نظر </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">پاسخ نظر </li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>
                    <form asp-controller="Comment" asp-area="Admin" asp-action="Edit" method="post">
                        <div class="box-body">
                            <input type="hidden" asp-for="CommentId" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NameFamily" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="NameFamily" disabled class="form-control" />

                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="Email" disabled class="form-control" />

                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Text" class="col-md-2 control-label"></label>
                                <div class="">
                                    <textarea asp-for="Text" disabled class="form-control"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-0 ">
                                    <input type="submit" value="ارسال" class="btn btn-lg btn-success" />
                                </div>
                            </div>

                        </div>
                    </form>



                </div>

            </div>

        </div>


    </div>


</section>
