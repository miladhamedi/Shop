@model CategoryViewModel

@{
    ViewData["Title"] = Model.Titel;

}

<link href="~/css/farbtastic.css" rel="stylesheet" />
<script src="~/js/farbtastic.js"></script>


<section class="content-header">
    <h1>
        اصلاح
        <small>دسته </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">اصلاح دسته </li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>
                    <form asp-controller="Category" asp-area="Admin" asp-action="Edit" method="post">
                        <div class="box-body">
                            <input type="hidden" asp-for="CategoryId" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Titel" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="Titel" class="form-control" />
                                    <span asp-validation-for="Titel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        <input asp-for="ActivePassive" />
                                        <label asp-for="ActivePassive"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="ویرایش" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>


    </div>


</section>
