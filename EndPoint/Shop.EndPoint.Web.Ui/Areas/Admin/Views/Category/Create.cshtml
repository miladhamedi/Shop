@model CategoryViewModel

@{
    ViewData["Title"] = "ایجاد دسته جدید";

}


<section class="content-header">
    <h1>
        اضافه کردن
        <small>دسته </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">اضافه کردن دسته </li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>

                    <form asp-area="Admin" asp-controller="Category" asp-action="Create" method="post">
                        <div class="box-body">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Titel" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="Titel" class="form-control" />
                                    <span asp-validation-for="Titel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2 ">
                                    <div class="checkbox">
                                        <input asp-for="ActivePassive" />
                                        <label asp-for="ActivePassive"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 ">
                                    <input type="submit" value="ایجاد دسته" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>


    </div>


</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

