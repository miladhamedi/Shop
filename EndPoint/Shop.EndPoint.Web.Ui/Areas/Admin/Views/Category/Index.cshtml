@model ShopActionResult<List<CategoryViewModel>>

@{
    ViewData["Title"] = "دسته بندی";

}



<section class="content-header">
    <h1>
        مدیریت
        <small>دسته ها</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت دسته ها</li>
    </ol>
</section>



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a asp-controller="Category" asp-area="Admin" asp-action="Create" class="btn btn-info"><i class="fa fa-plus-square"></i> دسته جدید</a>
                </div>

                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr>
                                            <th class="text text-center">
                                                @Html.DisplayNameFor(model => model.Data.First().Titel)
                                            </th>
                                            <th class="text text-center">
                                                @Html.DisplayNameFor(model => model.Data.First().ActivePassive)
                                            </th>
                                            <th class="text text-center">ویرایش</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {
                                            <tr>
                                                <td class="text text-center">
                                                    @Html.DisplayFor(modelItem => item.Titel)
                                                </td>
                                                <td class="text text-center">
                                                    @Html.DisplayFor(modelItem => item.ActivePassive)
                                                </td>
                                                <td class="text text-center">
                                                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId"><i class="fa fa-edit" style="color:forestgreen"></i></a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                <ul class="pagination">
                                    @for (int i = 1; i <= Model.Pages; i++)
                                    {

                                        if (Model.Page == i)
                                        {



                                            <li class="active">
                                                <a href="/Admin/Category/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>




                                        }
                                        else
                                        {


                                            <li>
                                                <a href="/Admin/Category/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>



                                        }


                                    }



                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>


</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}