@model EditProductViewModel

@{
    ViewData["Title"] = " ویرایش محصول";

}

<link href="~/css/farbtastic.css" rel="stylesheet" />
<script src="~/js/farbtastic.js"></script>


<section class="content-header">
    <h1>
        اصلاح
        <small>محصول </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">اصلاح محصول </li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>

                    <form asp-controller="Product" asp-action="Edit" method="post">
                        <div class="box-body">

                            <input type="hidden" asp-for="ProductId" />
                            <input type="hidden" asp-for="DiscuntedPrice" class="form-control" />

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Titel" class="col-md-2 control-label"></label>
                                <input asp-for="Titel" class="form-control" />
                                <span asp-validation-for="Titel" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label col-md-2"></label>
                                <select asp-for="CategoryId" class="form-control" asp-items=" ViewBag.ListCategory" style="height:50%"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="col-md-2 control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="DiscuntPercent" class="col-md-2 control-label"></label>
                                <input asp-for="DiscuntPercent" class="form-control" />
                                <span asp-validation-for="DiscuntPercent" class="text-danger"></span>

                            </div>


                            <div class="form-group">
                                <label asp-for="Stcok" class="col-md-2 control-label"></label>
                                <input asp-for="Stcok" class="form-control" />
                                <span asp-validation-for="Stcok" class="text-danger"></span>

                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="col-md-2 control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Weight" class="col-md-2 control-label"></label>
                                <input asp-for="Weight" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10" style="margin-right:0px;">
                                    <div class="checkbox">
                                        <input asp-for="ActiveInActive" />
                                        <label asp-for="ActiveInActive"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="box-footer">
                                <button type="submit" class="btn btn-info btn-lg">اصلاح محصول</button>
                            </div>

                        </div>
                    </form>

                </div>

            </div>

        </div>


    </div>


</section>

