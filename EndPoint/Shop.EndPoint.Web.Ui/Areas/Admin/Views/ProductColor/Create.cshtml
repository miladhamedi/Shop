@model ProductColorViewModel

@{
    ViewData["Title"] = "اضافه کردن رنگ";

}


<section class="content-header">
    <h1>
        اضافه کردن
        <small>رنگ </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">اضافه کردن رنگ </li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>

                    <form asp-controller="ProductColor" asp-action="Create" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ProductId" value=@ViewBag.ProductId />
                           
                            <div class="form-group">
                                <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ListColor" style="height:50%"></select>
                                <span asp-validation-for="ColorId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </form>

                </div>

            </div>

        </div>

    </div>


</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



