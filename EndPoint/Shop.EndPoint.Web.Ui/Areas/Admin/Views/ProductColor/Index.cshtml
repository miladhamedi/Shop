@model List<ColorProductViewModel>
@inject IProductColorService productcolorservice
@{
    ViewData["Title"] = "رنگ محصول";

}

<section class="content-header">
    <h1>
        مدیریت
        <small>رنگ ها</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت رنگ ها</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a href="/Admin/ProductColor/Create?productid=@Model.First().ProductId&returnUrl=/Admin/ProductColor/Index" class="btn btn-info"><i class="fa fa-plus-square"></i> افزودن رنگ</a>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-success"><i class="fa fa-plus-square"></i>لیست محصولات</a>
                </div>

                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">

                                            <th class="sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="text-align:center;">
                                               رنگ
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" style="text-align:center;">
                                                کد رنگ
                                            </th>
                                            <th></th>

                                            <th style="text-align:center;">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            
                                          
                                            <tr role="row" class="odd">
                                                <td style="text-align:center;">
                                                    @Html.DisplayFor(modelItem => item.ColorPro)
                                                </td>
                                                <td style="text-align:center;">
                                                    @Html.DisplayFor(modelItem => item.ColorCode)
                                                </td>
                                                <td style="text-align:center;background-color:#@item.ColorCode"></td>

                                              
                                                    <td style="text-align:center">
                                                        <a href="/Admin/ProductColor/Delete?colorid=@item.ColorId&productid=@Model.First().ProductId"><i class="fa fa-trash" style="color:red; font-size:20px;"></i></a>
                                                        &nbsp;&nbsp;
                                                        <a href="/Admin/ProductColor/Edit?colorid=@item.ColorId&productid=@Model.First().ProductId"><i class="fa fa-edit" style="color:forestgreen; font-size:20px;"></i></a>
                                                    </td>

                                               



                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>


    </div>


</section>




