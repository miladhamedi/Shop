@model ArticleViewModel

@{
    ViewData["Title"] = "ویرایش کردن مقاله";

}

<script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>

<section class="content-header">
    <h1>
        اضافه کردن
        <small>مقاله </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">اضافه کردن مقاله </li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>

                    <form asp-area="Admin" asp-controller="Article" asp-action="Edit" enctype="multipart/form-data">
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="ArticleId" type="hidden" class="form-control" />
                            <div class="form-group">
                                <label asp-for="Titel" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="Titel" class="form-control" />
                                    <span asp-validation-for="Titel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="col-md-2 control-label"></label>
                                <div class="">
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">

                                <textarea asp-for="Text" class="ckeditor form-control"></textarea>
                                <span asp-validation-for="Text" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="col-md-2 control-label"></label>
                                <div class="">
                                    <input asp-for="Image" name="Image" id="fileupload" type="file" />
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                    <img src="~/uploads/article/@Model.Image" id="dvPreview" style="margin-top: -25px;" class="col-md-offset-5" height="150" width="150" alt="Alternate Text" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-0 ">
                                    <input type="submit" value="ویرایش مقاله" class="btn btn-lg btn-success" />
                                </div>
                            </div>
                        </div>
                    </form>

                </div>

            </div>

        </div>


    </div>
</section>

<div>
    <a asp-controller="Article" asp-action="Index">بازگشت ب لیست</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

