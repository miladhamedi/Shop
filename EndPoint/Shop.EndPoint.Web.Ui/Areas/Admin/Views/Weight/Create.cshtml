@model WeightViewModel

@{
    ViewData["Title"] = "ثبت هزینه ارسال";

}


<section class="content-header">
    <h1>
        ثبت
        <small> هزینه ارسال </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active"> ثبت هزینه ارسال </li>
    </ol>
</section>




<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form asp-action="Create" asp-controller="Weight" method="post">
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Weight_Min"></label>
                                <input asp-for="Weight_Min" class="form-control" id="Weight_Min"  type="text" required title="حداقل وزن را وارد کنید">
                                <span asp-validation-for="Weight_Min" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Weight_Max"></label>
                                <input asp-for="Weight_Max" class="form-control" id="Weight_Max"  type="text" required title="حداکثر وزن را وارد کنید">
                                <span asp-validation-for="Weight_Max" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Weight_Price"></label>
                                <input asp-for="Weight_Price" class="form-control" id="Weight_Price"  type="text" required title="قیمت را وارد کنید">
                                <span asp-validation-for="Weight_Price" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">ثبت </button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}















