@model ShopActionResult<List<WeightViewModel>>

@{
    ViewData["Title"] = "مدیریت وزن و هزینه ارسال";

}

<style>
    th {
        text-align: center;
    }

    .even {
        background-color: white;
    }

    .odd {
        background-color: #ebebeb;
    }
</style>

<section class="content-header">
    <h1>
        مدیریت
        <small>وزن و هزینه ارسال </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">وزن و هزینه ارسال</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a asp-action="Create" class="btn btn-info"><i class="fa fa-plus-square"></i>  افزودن وزن جدید</a>
                </div>
                <!-- /.box-header -->
                <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                <thead>
                                    <tr>
                                        <th>
                                            حداکثر وزن(کیلوگرم)
                                        </th>
                                        <th>
                                            حداقل وزن(کیلوگرم)
                                        </th>
                                        <th>
                                            هزینه(تومان)
                                        </th>
                                        <th>ویرایش</th>
                                        <th>حذف</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Data)
                                    {
                                        var Pricepro = Math.Round(item.Weight_Price);
                                        var Priceproduct = string.Format("{0:0,0}", Pricepro);

                                        <tr>
                                            <td class="text-center">
                                                @item.Weight_Max
                                            </td>
                                            <td class="text-center">
                                                @item.Weight_Min
                                            </td>
                                            <td class="text-center">
                                                @Priceproduct
                                            </td>
                                            <td class="text-center">

                                                <a asp-action="Edit" asp-controller="Weight" asp-route-id="@item.WeightId"><i class="fa fa-edit" style="color:forestgreen; font-size:20px;"></i></a>



                                            </td>
                                            <td class="text-center">

                                                <a asp-action="Remove" asp-controller="Weight" asp-route-id="@item.WeightId"><i class="fa fa-trash" style="color:red; font-size:20px;"></i></a>

                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                <ul class="pagination">
                                    @for (int i = 1; i <= Model.Pages; i++)
                                    {

                                        if (Model.Page == i)
                                        {



                                            <li class="active">
                                                <a href="/Admin/Weight/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>




                                        }
                                        else
                                        {


                                            <li>
                                                <a href="/Admin/Weight/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>



                                        }


                                    }



                                </ul>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </div>
    <!-- /.row -->
</section>