@model List<RoleViewModel>

@{

    ViewData["Title"] = "نقش ها";

}



<section class="content-header">
    <h1>
        مدیریت
        <small>نقش ها</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت نقش ها</li>
    </ol>
</section>



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a asp-controller="Roles" asp-action="Create" class="btn btn-info"><i class="fa fa-plus-square"></i> نقش جدید</a>
                </div>

                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr>
                                            
                                            <th class="text text-center">
                                                @Html.DisplayNameFor(model => model.First().RoleName)
                                            </th>
                                            <th class="text text-center">حذف</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                
                                                <td class="text text-center">
                                                    @Html.DisplayFor(modelItem => item.RoleName)
                                                </td>
                                                <td class="text text-center">
                                                    <a asp-area="Admin" asp-controller="Roles" asp-action="Delete" asp-route-roleid="@item.RoleId"><i class="fa fa-trash" style="color:red; font-size:20px;"></i></a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                     
                    </div>
                </div>
            </div>

        </div>


    </div>


</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}