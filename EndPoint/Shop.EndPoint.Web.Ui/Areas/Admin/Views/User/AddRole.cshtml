@model UserRoleViewModel

@{

    ViewData["Title"] = "افزودن نقش";


}







<section class="content">
    <div class="row">

        <div class="col-md-12 ">
            <div class="box">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"></h3>
                    </div>

                    <form asp-controller="User" asp-area="Admin" asp-action="AddRole" method="post">
                        <div class="box-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" class="form-control" />

                            <div class="form-group">
                                
                                <select asp-for="RoleId"  asp-items="@ViewBag.ListRole" class="form-control" style="height:50%"></select>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-10">
                                    <input type="submit" value="افزودن نقش" class="btn btn-success btn-lg" />
                                </div>
                            </div>

                        </div>
                    </form>

                </div>

            </div>

        </div>


    </div>

</section>

