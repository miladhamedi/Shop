@model ShopActionResult<List<UserViewModel>>

@{
    ViewData["Title"] = "مدیریت کاربران";

}
<style>
    th, td, tr {
        text-align: center;
    }

    .even {
        background-color: white;
    }

    .odd {
        background-color: #ebebeb;
    }
</style>


<section class="content-header">
    <h1>
        مدیریت
        <small>کاربران</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">مدیریت  کاربران</li>
    </ol>
</section>

<section class="content">
    <div class="row">

        <div class="col-xs-12">

            <div class="box">

               

                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr>
                                            <th>
                                                نام و نام خانوادگی
                                            </th>
                                            <th>
                                                نام کاربری
                                            </th>
                                            <th>
                                                جزئیات کاربر
                                            </th>
                                            <th>
                                                افزودن دسترسی
                                            </th>
                                            <th>
                                                فعال/غیر فعال کردن
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NameFamily)

                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UserName)
                                                </td>
                                                <td>
                                                    <a asp-controller="User" asp-action="Details" asp-route-userid="@item.Id"><i style="color:#0ca6ff; font-size:30px;" class="fa fa-address-card"></i></a>
                                                </td>
                                                <td>
                                                    <a asp-controller="User" asp-action="ListRole" asp-route-userid="@item.Id" class="btn btn-info">

                                                        <i class="fa fa-plus-square"></i> مدیریت دسترسی

                                                    </a>
                                                </td>

                                                @{
                                                    if (item.Access == false)
                                                    {
                                                        <td>
                                                            <a asp-action="Active" asp-controller="User" class="btn btn-danger" asp-route-userid="@item.Id"><i class="fa fa-close"></i></a>

                                                        </td>

                                                    }

                                                    else
                                                    {
                                                        <td>
                                                            <a asp-action="InActive" asp-controller="User" class="btn btn-success" asp-route-userid="@item.Id"><i class="fa fa-check"></i></a>

                                                        </td>


                                                    }
                                                }

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                <ul class="pagination">
                                    @for (int i = 1; i <= Model.Pages; i++)
                                    {

                                        if (Model.Page == i)
                                        {



                                            <li class="active">
                                                <a href="/Admin/User/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>




                                        }
                                        else
                                        {


                                            <li>
                                                <a href="/Admin/User/Index?page=@i.ToString()" aria-controls="example2" class="" data-dt-idx="1" tabindex="0">@i.ToString()</a>
                                            </li>



                                        }


                                    }



                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>

</section>
