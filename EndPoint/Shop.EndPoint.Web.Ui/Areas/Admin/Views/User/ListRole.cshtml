@model List<RoleViewModel>

@{
    ViewData["Title"] = "نقش ها";

}



<section class="content-header">
    <h1>
        مدیریت
        <small>نقش ها</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">نقش ها </li>
    </ol>
</section>



<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <a asp-controller="User" asp-area="Admin" asp-action="AddRole" asp-route-userid="@ViewBag.UserId" class="btn btn-info"><i class="fa fa-plus-square"></i> افزودن نقش جدید</a>
                </div>

                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr>
                                            <th class="text text-center">
                                               نقش کاربر
                                            </th>
                                          
                                            <th class="text text-center">
                                                عملیات
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="text text-center">
                                                    @Html.DisplayFor(modelItem => item.RoleName)
                                                </td>
                                               
                                                <td class="text text-center">
                                                    <a asp-area="Admin" asp-controller="User" asp-action="RemoveRole" asp-route-rolename="@item.RoleName"><i class="fa fa-trash" style="color:red; font-size:20px;"></i></a>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </div>

        </div>


    </div>


</section>


