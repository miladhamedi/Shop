@model UserProfileViewModel

@{
    Layout = null;
   
}

<div class='panel_content'>
    <!--<div class='title_style7'>
        <div class='title'>پروفایل من</div>
    </div>-->
    <div class='form_style2'>
        <form asp-controller="Profile" asp-action="AddInformationUser" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           


            <ul class='step none_list_style clearfix'>
        
                <li class='item half'>
                    <div class='icon'><i class='i-mobile'></i></div>
                    <input asp-for="IrCode" type='text' maxlength="10" placeholder='کدملی'>
                    <span class='focus_bg'></span>
                    <span asp-validation-for="IrCode" class="text-danger"></span>
                </li>
                <li class='item half'>
                    <div class='icon'><i class='i-mail-2'></i></div>
                    <input asp-for="City" type='text' placeholder='شهر'>
                    <span class='focus_bg'></span>
                    <span asp-validation-for="City" class="text-danger"></span>
                </li>
                <li class='item half'>
                    <div class='icon'><i class='i-telephone'></i></div>
                    <input asp-for="Province" type='text' placeholder='استان'>
                    <span class='focus_bg'></span>
                    <span asp-validation-for="Province" class="text-danger"></span>
                </li>
                <li class='item half'>
                    <div class='icon'><i class='i-mobile'></i></div>
                    <input asp-for="PostalCode" type='text' maxlength="10" placeholder='کدپستی'>
                    <span class='focus_bg'></span>
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </li>

                <li class='item textarea'>
                    <div class='icon'><i class='i-mobile'></i></div>
                    <input asp-for="Address" multiple type='text' placeholder='آدرس'>
                    <span class='focus_bg'></span>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </li>
                <li class="item submit">
                    <button type="submit">ثبت</button>
                </li>
            </ul>
        </form>
    </div><!--close .form_style2-->
</div><!--clsoe .panel_content-->



